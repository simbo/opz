{
  "name": "opz",
  "productName": "OpZ",
  "description": "My developer operation center.",
  "version": "0.0.1",
  "private": true,
  "author": "Simon Lepel <simbo@simbo.de> (https://simbo.de)",
  "license": "MIT",
  "homepage": "http://github.com/simbo/opz",
  "bugs": "http://github.com/simbo/opz/issues",
  "repository": "github:simbo/opz",
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.17.1",
  "type": "module",
  "main": ".vite/build/main.js",
  "scripts": {
    "build": "electron-forge package",
    "build:frontend": "vite build --config ./vite.frontend-index.config.ts",
    "check:eslint": "eslint --config ./eslint.config.ts --max-warnings 0",
    "check:format": "prettier --check .",
    "check:spelling": "cspell",
    "check:types": "tsc --project tsconfig.json --noEmit",
    "check": "pnpm run check:format && pnpm run check:types && npm run check:eslint && pnpm run check:spelling",
    "clean:node_modules": "rm -rf node_modules",
    "clean": "pnpm run clean:node_modules",
    "dev": "electron-forge start",
    "fix:eslint": "pnpm run check:eslint --fix",
    "fix:format": "prettier --write .",
    "make": "electron-forge make",
    "ncu:latest": "ncu --interactive --target latest --reject='/^(@types\\/node|typescript)$/'",
    "ncu:minor": "ncu --interactive --target minor --reject='/^(typescript)$/'",
    "ncu:patch": "ncu --interactive --target patch",
    "preflight": "pnpm install --frozen-lockfile && pnpm run check && pnpm run make && echo 'CvCfn6IgG1sxOzMybUFsbCBDaGVja3MgUGFzc2VkIRtbMG0K' | base64 --decode",
    "prepare": "husky",
    "publish": "electron-forge publish"
  },
  "dependencies": {
    "@primer/octicons": "^19.18.0",
    "@simbo/zodpak": "^0.1.2",
    "electron-log": "^5.4.3",
    "emittery": "^1.2.0",
    "p-queue": "^8.1.1",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.5.0",
    "vue": "^3.5.22",
    "vue-router": "^4.5.1",
    "zod": "^4.1.11",
    "zod-validation-error": "^4.0.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@electron-forge/cli": "^7.9.0",
    "@electron-forge/maker-dmg": "^7.9.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.9.0",
    "@electron-forge/plugin-fuses": "^7.9.0",
    "@electron-forge/plugin-vite": "^7.9.0",
    "@electron-forge/shared-types": "^7.9.0",
    "@electron/fuses": "^1.8.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@simbo/commitlint-config": "^1.0.6",
    "@simbo/cspell-config": "^1.4.0",
    "@simbo/eslint-config": "^2.0.1",
    "@simbo/prettier-config": "^1.0.6",
    "@simbo/tsconfig": "^1.0.4",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/node": "^20.19.13",
    "@types/primer__octicons": "^19.11.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "cspell": "^9.2.1",
    "electron": "38.2.0",
    "eslint": "^9.36.0",
    "eslint-plugin-vue": "^10.5.0",
    "execa": "^9.6.0",
    "husky": "^9.1.7",
    "npm-check-updates": "^19.0.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "sass-embedded": "^1.93.2",
    "type-fest": "^5.0.1",
    "typescript": "~5.9.2",
    "vite": "^7.1.7",
    "vue-tsc": "^3.1.0"
  }
}
